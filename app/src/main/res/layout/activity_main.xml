<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codetutor.youtube.com.todoclient.MainActivity">


    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="380dp"
        android:layout_height="252dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonGetAllToDos"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:text="Get All ToDos"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewContent" />

    <EditText
        android:id="@+id/editTextWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Place"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetAllToDos" />

    <Button
        android:id="@+id/buttonGetToDoForPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get for Place"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextWhere"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="373dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetToDoForPlace" />


</android.support.constraint.ConstraintLayout>
